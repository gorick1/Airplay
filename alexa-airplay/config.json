{
  "name": "Amazon Echo AirPlay Bridge",
  "version": "1.0.0",
  "slug": "alexa-airplay",
  "description": "Stream Apple Music to Amazon Echo devices via virtual AirPlay receivers",
  "url": "https://github.com/gorick1/Airplay/tree/main/alexa-airplay",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf"
  ],
  "startup": "services",
  "boot": "auto",
  "homeassistant_api": true,
  "hassio_api": true,
  "hassio_role": "default",
  "init": true,
  "ports": {
    "8000/tcp": 8000,
    "5001/tcp": 5001,
    "5353/udp": 5353
  },
  "ports_description": {
    "8000/tcp": "Web UI and OAuth callback",
    "5001/tcp": "AirPlay RTSP/Audio streaming",
    "5353/udp": "mDNS discovery"
  },
  "privileged": [],
  "panel_icon": "mdi:speaker-multiple",
  "panel_title": "Alexa AirPlay",
  "options": {
    "amazon_client_id": "",
    "amazon_client_secret": "",
    "amazon_redirect_uri": "http://localhost:8000/oauth/callback",
    "airplay_port": 5000,
    "debug_logging": false
  },
  "schema": {
    "amazon_client_id": "str?",
    "amazon_client_secret": "str?",
    "amazon_redirect_uri": "str?",
    "airplay_port": "port?",
    "debug_logging": "bool?"
  }
}

